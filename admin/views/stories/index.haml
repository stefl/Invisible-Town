.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:stories, :index)
      %li=link_to pat(:new), url(:stories, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:stories)
    .inner
      %table.table
        %tr
          %th.first=mat(:story, :id)
          %th=mat(:story, :title)
          %th=mat(:story, :post_id)
          %th=mat(:story, :happened_at)
          %th=mat(:story, :x)
          %th=mat(:story, :y)
          %th=mat(:story, :map_id)
          %th.last="&nbsp;"
        -@stories.each do |story|
          %tr
            %td.first=story.id
            %td=story.title
            %td=story.post_id
            %td=story.happened_at
            %td=story.x
            %td=story.y
            %td=story.map_id
            %td.last
              =button_to pat(:edit), url(:stories, :edit, :id => story.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:stories, :destroy, :id => story.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
